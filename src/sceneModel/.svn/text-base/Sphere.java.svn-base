package sceneModel;

/**
 * A SceneElement that represents a sphere.
 * 
 * @author Geert Van Campenhout
 * @version 1.0
 */
public class Sphere implements SceneElement {
	
	String name;
	public float radius;

	/**
	 * Creates a new sphere with the given radius and name.
	 * 
	 * @param radius	The radius of the sphere.
	 * @param name	The name of the name.
	 */
	public Sphere(float radius, String name) {
		this.radius = radius;
		this.name = name;
	}

	/* (non-Javadoc)
	 * @see sceneModel.SceneElement#getName()
	 */
	@Override
	public String getName() {
		return this.name;
	}

}

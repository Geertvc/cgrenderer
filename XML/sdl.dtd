
<!ELEMENT Sdl (Cameras,Lights,Geometry,Textures?,Materials?,Scene)>
<!ATTLIST Sdl>

<!ELEMENT Cameras (Camera+)>
<!ATTLIST Cameras>

<!ELEMENT Camera EMPTY>
<!ATTLIST Camera
	position					CDATA			#REQUIRED
	direction					CDATA			#REQUIRED
	up							CDATA			#REQUIRED
	fovy						CDATA			#REQUIRED	
	name						ID				#REQUIRED
>

<!ELEMENT Lights ((DirectionalLight|PointLight|SpotLight)+)>
<!ATTLIST Lights>

<!ELEMENT DirectionalLight EMPTY>
<!ATTLIST DirectionalLight
	direction					CDATA			#REQUIRED
	intensity					CDATA			"1"			
	color						CDATA			"1 1 1"
	name						ID				#REQUIRED
>

<!ELEMENT PointLight EMPTY>
<!ATTLIST PointLight
	position					CDATA			#REQUIRED
	intensity					CDATA			"1"			
	color						CDATA			"1 1 1"
	name						ID				#REQUIRED
>

<!ELEMENT SpotLight EMPTY>
<!ATTLIST SpotLight
	position					CDATA			#REQUIRED
	direction					CDATA			#REQUIRED
	angle						CDATA			#REQUIRED
	intensity					CDATA			"1"			
	color						CDATA			"1 1 1"
	name						ID				#REQUIRED
>


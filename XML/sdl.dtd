<!ELEMENT Table EMPTY>
<!ATTLIST Table
	size						CDATA			#REQUIRED
	name						ID				#REQUIRED
>

<!ELEMENT Tablecloth EMPTY>
<!ATTLIST Tablecloth
	size						CDATA			#REQUIRED
	name						ID				#REQUIRED
>

<!ELEMENT IndexedTriangleSet EMPTY>
<!ATTLIST IndexedTriangleSet
	coordinates					CDATA			#REQUIRED
	normals						CDATA			#IMPLIED
	textureCoordinates			CDATA			#IMPLIED	
	coordinateIndices			CDATA			#REQUIRED
	normalIndices				CDATA			#IMPLIED
	textureCoordinateIndices	CDATA			#IMPLIED
	name						ID				#REQUIRED
>

<!ELEMENT Textures (Texture*)>
<!ATTLIST Textures>

<!ELEMENT Texture EMPTY>
<!ATTLIST Texture
	src							CDATA			#REQUIRED
	name						ID				#REQUIRED
>


<!ELEMENT Materials ((DiffuseMaterial|PhongMaterial|LinearCombinedMaterial|GlobalMaterial)*)>
<!ATTLIST Materials>

<!ELEMENT DiffuseMaterial EMPTY>
<!ATTLIST DiffuseMaterial
	color						CDATA			#REQUIRED
	name						ID				#REQUIRED
>

<!ELEMENT PhongMaterial EMPTY>
<!ATTLIST PhongMaterial
	color						CDATA			#REQUIRED
	shininess					CDATA			#REQUIRED
	name						ID				#REQUIRED
>

<!ELEMENT LinearCombinedMaterial EMPTY>
<!ATTLIST LinearCombinedMaterial
	material1					IDREF			#REQUIRED
	weight1						CDATA			"0.5"
	material2					IDREF			#REQUIRED
	weight2						CDATA			"0.5"
	name						ID				#REQUIRED	
>

<!ELEMENT GlobalMaterial EMPTY>
<!ATTLIST GlobalMaterial
	ambientColor				CDATA			"0.5"
	diffuseColor				CDATA			"0.5"
	spectralColor				CDATA			"0.5"
	phongExponent				CDATA			"0.5"
	reflectionCoefficient		CDATA			"0.5"
	name						ID				#REQUIRED	
>

<!ELEMENT Scene ((Shape|Rotate|Translate|Scale)+)>
<!ATTLIST Scene
	camera						IDREF			#REQUIRED
	lights						CDATA			#REQUIRED
